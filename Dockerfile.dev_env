FROM ofrir119/developer_env:spark340_ssh

# Switch to root for installations
USER root

# Fix repository issues
RUN echo "Fixing Ubuntu repositories..." && \
    cp /etc/apt/sources.list /etc/apt/sources.list.backup && \
    sed -i '/kinetic-proposed/d' /etc/apt/sources.list || true && \
    sed -i 's|http://archive.ubuntu.com/ubuntu|http://old-releases.ubuntu.com/ubuntu|g' /etc/apt/sources.list && \
    sed -i 's|http://security.ubuntu.com/ubuntu|http://old-releases.ubuntu.com/ubuntu|g' /etc/apt/sources.list && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/* && \
    apt-get update --allow-releaseinfo-change || true && \
    apt-get install -y --no-install-recommends \
        libpq-dev \
        gcc \
        openssh-server \
        python3-pip && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

# Install psycopg2 for PostgreSQL
RUN python3 -m pip install --no-cache-dir psycopg2-binary

# Ensure SSH server setup is proper
RUN mkdir -p /var/run/sshd && \
    echo 'root:password' | chpasswd && \
    sed -i 's/PermitRootLogin prohibit-password/PermitRootLogin yes/' /etc/ssh/sshd_config

# Set permissions for startup scripts
RUN chmod +x /root/start_jupyter.sh || echo "No Jupyter startup script found."

# Environment variables
ENV DEBIAN_FRONTEND=noninteractive

# Expose ports
EXPOSE 22 8888 4040 4041 4042

# Default command to keep the container running
CMD ["/bin/bash", "-c", "service ssh start && tail -f /dev/null"]
